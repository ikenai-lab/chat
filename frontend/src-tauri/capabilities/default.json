{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main application window",
  "windows": [
    "main"
  ],
  "permissions": [
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-backend",
          "sidecar": true,
          "cmd": "binaries/backend-x86_64-unknown-linux-gnu"
        }
      ]
    },
    "core:default",
    "core:window:default"
  ]
}
